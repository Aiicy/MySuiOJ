{% set title = lang('Register') %}
{% include 'templates/simple_header.twig' %}

{{ form_open('login/register') }}
<div class="box register">

	<div class="judge_logo">
		<a href="{{ site_url() }}"><img src="{{ base_url('assets/images/banner.png') }}"/></a>
	</div>

	<div class="login_form">
		<div class="login1">
			{% if registration_code_required %}
			<p>
				<label for="form_reg_code">{{ lang('Registration Code') }}</label><br/>
				<input id="form_reg_code" type="text" name="registration_code" required="required" autofocus="autofocus" class="mysui_input" value="{{ set_value('registration_code') }}"/>
				{{ form_error('registration_code', '<div class="msoj_error">', '</div>') }}
			</p>
			{% endif %}
			<p>
				<label for="form_username">{{ lang('Username') }}</label><br/>
				<input id="form_username" type="text" name="username" required="required" pattern="[0-9A-Za-z]{3,20}" title="{{ lang('Username field') }}" class="mysui_input" value="{{ set_value('username') }}"/>
				{{ form_error('username', '<div class="msoj_error">', '</div>') }}
			</p>
			<p>
				<label for="form_email">{{ lang('Email') }}</label><br/>
				<input id="form_email" type="email" autocomplete="off" name="email" required="required" class="mysui_input" value="{{ set_value('email') }}"/>
				{{ form_error('email','<div class="msoj_error">','</div>') }}
			</p>
			<p>
				<label for="form_password">{{ lang('Password') }}</label><br/>
				<input id="form_password" type="password" name="password" required="required" pattern=".{6,200}" title="{{ lang('Password field') }}" class="mysui_input"/>
				{{ form_error('password','<div class="msoj_error">','</div>') }}
			</p>
			<p>
				<label for="form_password_2">{{ lang('Password, Again') }}</label><br/>
				<input id="form_password_2" type="password" name="password_again" required="required" pattern=".{6,200}" title="{{ lang('Password Confirmation') }}" class="mysui_input"/>
				{{ form_error('password_again','<div class="msoj_error">','</div>') }}
			</p>
		</div>
		<div class="login2">
			<p style="margin:0;">
				<a href="{{ site_url('login') }}">{{ lang('Login') }}</a>
				<input type="submit" value="{{ lang('Register') }}" id="mysui_submit"/>
			</p>
		</div>
	</div>

</div>
</form>
</body>
</html>