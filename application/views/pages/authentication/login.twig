{% set title = lang('Login') %}
{% include 'templates/simple_header.twig' %}

{{ form_open() }}
	<div class="box login">

		<div class="judge_logo">
			<a href="{{ site_url() }}"><img src="{{ base_url('assets/images/banner.png') }}"/></a>
		</div>

		<div class="login_form">
			<div class="login1">
				<p>
					<label for="form_username">{{ lang('Username') }}</label><br/>
					<input id="form_username" type="text" name="username" required="required" pattern="[0-9a-z]{3,20}" title="{{ lang('Username field') }}" class="mysui_input" value="{{ set_value('username') }}" autofocus="autofocus"/>
					{{ form_error('username', '<div class="msoj_error">', '</div>') }}
				</p>
				<p>
					<label for="form_password">{{ lang('Password') }}</label><br/>
					<input id="form_password" type="password" name="password" required="required" pattern=".{6,200}" title="{{ lang('Password field') }}" class="mysui_input"/>
					{{ form_error('password', '<div class="msoj_error">', '</div>') }}
				</p>
				{% if error %}
					<div class="msoj_error">{{ lang('Incorrect') }}</div>
				{% endif %}
			</div>
			<div class="login2">
				<p style="margin:0;">
					{% if registration_enabled %}
					<a href="{{ site_url('register') }}">{{ lang('Register') }}</a> |
					{% endif %}
					<a href="{{ site_url('login/lost') }}">{{ lang('Reset Password') }}</a>
					<input type="submit" value="{{ lang('Login') }}" id="mysui_submit"/>
				</p>
			</div>
		</div>

	</div>
</form>
</body>
</html>