{% set title = lang('Lost Password') %}
{% include 'templates/simple_header.twig' %}

{{ form_open('login/lost') }}
	<div class="box login">

		<div class="judge_logo">
			<a href="{{ site_url() }}"><img src="{{ base_url('assets/images/banner.png') }}"/></a>
		</div>

		<div class="login_form">
			<div class="login1">
				<p>
					<label for="form_email">{{ lang('Email') }}</label><br/>
					<input id="form_email" type="email" name="email" class="mysui_input" value="{{ set_value('email') }}"/>
					{{ form_error('email', '<div class="msoj_error">', '</div>') }}
				</p>
				{% if sent %}
					<div class="msoj_ok">{{ lang('Sent Email') }}</div>
				{% endif %}
			</div>
			<div class="login2">
				<p style="margin:0;">
					<a href="{{ site_url('login') }}">{{ lang('Login') }}</a>
					<input type="submit" value="{{ lang('Reset Password') }}" id="mysui_submit"/>
				</p>
			</div>
		</div>

	</div>
</form>
</body>
</html>