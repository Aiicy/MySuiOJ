{% set selected = 'settings' %}
{% extends 'templates/base.twig' %}
{% block icon %}fa-gear{% endblock %}
{% block title %}设置{% endblock %}
{% block head_title %}设置{% endblock %}



{% block other_assets %}
<script type='text/javascript' src="{{ base_url('assets/js/taboverride.min.js') }}"></script>
<script>
$(document).ready(function(){
	tabOverride.set(document.getElementsByTagName('textarea'));
});
</script>
{% endblock %}



{% block title_menu %}
<span class="title_menu_item">
	<a href="https://github.com/mjnaderi/Sharif-Judge/blob/docs/v1.4/settings.md" target="_blank"><i class="fa fa-question-circle color6"></i> Help</a>
</span>
{% endblock %}



{% block main_content %}
<p class="input_p">
{% if form_status == 'ok' %}
	<div class="shj_ok">设置更新成功！</div>
{% elseif form_status == 'error' %}
	<div class="shj_error">设置保存失败</div>
{% endif %}
{% for error in errors %}
	<div class="shj_error">{{ error }}</div>
{% endfor %}
{% if not defc %}
	<div class="shj_error">需要修改 "Tester path"</div>
{% endif %}
</p>
{{ form_open('settings/update') }}
	<p class="input_p">
		<label for="form_timezone">
			时区<br>
			<a target="_blank" href="http://www.php.net/manual/en/timezones.php">时区列表</a>
		</label>
		<span class="form_comment timer"></span><br>
		<input id="form_timezone" type="text" name="timezone" class="mysui_input medium" value="{{ timezone }}"/>
		{{ form_error('timezone', '<div class="shj_error">', '</div>') }}
	</p>
	<p class="input_p">
		<label for="form_week">一周的第一天</label>
		<select id="form_week" name="week_start" class="mysui_input">
			<option value="0" {{ week_start == 0 ? 'selected="selected"' }}>星期天</option>
			<option value="1" {{ week_start == 1 ? 'selected="selected"' }}>星期一</option>
			<option value="2" {{ week_start == 2 ? 'selected="selected"' }}>星期二</option>
			<option value="3" {{ week_start == 3 ? 'selected="selected"' }}>星期三</option>
			<option value="4" {{ week_start == 4 ? 'selected="selected"' }}>星期四</option>
			<option value="5" {{ week_start == 5 ? 'selected="selected"' }}>星期五</option>
			<option value="6" {{ week_start == 6 ? 'selected="selected"' }}>星期六</option>
		</select>
	</p>
	<p class="input_p">
		<label for="form_t_path">文件夹<code>tester</code> 的完整路径</label>
		<input id="form_t_path" type="text" name="tester_path" class="mysui_input medium" value="{{ tester_path }}"/>
	</p>
	<p class="input_p">
		<label for="form_a_path">文件夹<code>assignments</code> 的完整路径</label>
		<input id="form_a_path" type="text" name="assignments_root" class="mysui_input medium" value="{{ assignments_root }}"/>
	</p>
	<p class="input_p">
		<label for="form_up_limit">上传大小限制 (kB)</label>
		<input id="form_up_limit" type="text" name="file_size_limit" class="mysui_input medium" value="{{ file_size_limit }}"/>
		{{ form_error('file_size_limit', '<div class="shj_error">', '</div>') }}
	</p>
	<p class="input_p">
		<label for="form_out_limit">输出大小限制 (kB)</label>
		<input id="form_out_limit" type="text" name="output_size_limit" class="mysui_input medium" value="{{ output_size_limit }}"/><br>
		<span class="form_comment clear">Sets a limit for size of output file generated by submitted code</span>
		{{ form_error('output_size_limit', '<div class="shj_error">', '</div>') }}
	</p>
	<p class="input_p">
		<label for="form_rpp_all">每页显示的数量</label>
		<input id="form_rpp_all" type="text" name="rpp_all" class="mysui_input medium" value="{{ results_per_page_all }}"/>
		<p class="form_comment clear">在“所有的提交” 页面上<br>输入 0 为不限制</p>
		{{ form_error('results_per_page_all', '<div class="shj_error">', '</div>') }}
	</p>
	<p class="input_p">
		<label for="form_rpp_final">每页显示的数量</label>
		<input id="form_rpp_final" type="text" name="rpp_final" class="mysui_input medium" value="{{ results_per_page_final }}"/>
		<p class="form_comment clear">在页面 “最近的提交”上<br>输入 0 为不限制</p>
		{{ form_error('results_per_page_final', '<div class="shj_error">', '</div>') }}
	</p>
	<p class="input_p">
		<input id="form_en_reg" type="checkbox" name="enable_registration" value="1" {{ enable_registration ? 'checked' }}/>
		<label for="form_en_reg">注册</label><br>
		<span class="form_comment">开放注册</span>
	</p>
	<p class="input_p">
		<label for="form_reg_code">注册码</label>
		<input id="form_reg_code" type="text" name="registration_code" class="mysui_input medium" value="{{ registration_code }}"/><br>
		<p class="form_comment clear">如果你想要开放注册 (上面那个选项)，最好设置一个注册码<br>
			输入 0 为关闭</p>
		{{ form_error('registration_code', '<div class="shj_error">', '</div>') }}
	</p>
	<p class="input_p">
		<input id="form_log" type="checkbox" name="enable_log" value="1" {{ enable_log ? 'checked' }}/>
		<label for="form_log">调试信息</label><br>
		<span class="form_comment">开启调试信息</span>
	</p>
	<p class="input_p">
		<label for="form_late_rule">Default Coefficient Rule</label>
		<span class="form_comment clear">PHP script without &lt;?php ?&gt; tags</span><br>
		<textarea id="form_late_rule" name="default_late_rule" rows="15" class="mysui_input add_text clear">{{ default_late_rule }}</textarea>
	</p>

	<h2 class="shj_form">邮箱</h2>

	<p class="input_p">
		<label for="form_mail_from">发件人邮箱</label>
		<input id="form_mail_from" type="text" name="mail_from" class="mysui_input medium" value="{{ mail_from }}"/>
		{{ form_error('mail_from', '<div class="shj_error">', '</div>') }}
	</p>
	<p class="input_p">
		<label for="form_mail_name">发件人姓名</label>
		<input id="form_mail_name" type="text" name="mail_from_name" class="mysui_input medium" value="{{ mail_from_name }}"/>
		{{ form_error('mail_from_name','<div class="shj_error">','</div>') }}
	</p>
	<p class="input_p">
		<label for="form_mail_reset">密码重置邮件内容</label>
		<span class="form_comment">你可以使用 {SITE_URL}, {RESET_LINK} 和 {VALID_TIME}</span><br>
		<textarea id="form_mail_reset" name="reset_password_mail" rows="15" class="mysui_input add_text clear">{{ reset_password_mail }}</textarea>
	</p>
	<p class="input_p">
		<label for="form_mail_add">用户注册邮件内容</label>
		<span class="form_comment clear">你可以使用 {SITE_URL}, {LOGIN_URL}, {ROLE}, {USERNAME} 和 {PASSWORD}</span><br>
		<textarea id="form_mail_add" name="add_user_mail" rows="15" class="mysui_input add_text clear">{{ add_user_mail }}</textarea>
	</p>


	<h2 class="shj_form">
		Sandboxing <span class="title_menu_item">
			<a href="https://github.com/mjnaderi/Sharif-Judge/blob/docs/v1.4/sandboxing.md" target="_blank"><i class="fa fa-question-circle color11"></i> Help</a>
		</span>
	</h2>

	<p class="input_p">
		<input id="form_easysandbox" type="checkbox" name="enable_easysandbox" value="1" {{ enable_easysandbox ? 'checked' }}/>
		<label for="form_easysandbox">EasySandbox</label>
	</p>
	<p class="form_comment">为 C/C++ 开启沙箱<br>
		You must <a href="https://github.com/mjnaderi/Sharif-Judge/blob/docs/v1.4/sandboxing.md#build-easysandbox" target="_blank">build EasySandbox</a> before enabling it.<br>
		{% if not sandbox_built %}
			<span style="color: red;">你还没有编译 EasySandbox</span>
		{% endif %}
	</p>

	<p class="input_p">
		<input id="form_java_policy" type="checkbox" name="enable_java_policy" value="1" {{ enable_java_policy ? 'checked' }}/>
		<label for="form_java_policy">Java Policy</label>
	</p>
	<p class="form_comment">
		Enable <a href="https://github.com/mjnaderi/Sharif-Judge/blob/docs/v1.4/sandboxing.md#java-sandboxing" target="_blank">Java Sandboxing</a>
	</p>



	<h2 class="shj_form">
		Shield <span class="title_menu_item">
			<a href="https://github.com/mjnaderi/Sharif-Judge/blob/docs/v1.4/shield.md" target="_blank"><i class="fa fa-question-circle color11"></i> Help</a>
		</span>
	</h2>

	<p class="input_p">
		<input id="form_c_sh" type="checkbox" name="enable_c_shield" value="1" {{ enable_c_shield ? 'checked' }}/> <label for="form_c_sh">C Shield</label><br>
		<span class="form_comment">Enable <a href="https://github.com/mjnaderi/Sharif-Judge/blob/docs/v1.4/shield.md" target="_blank">Shield</a> for C</span>
	</p>
	<p class="input_p">
		<input id="form_cpp_sh" type="checkbox" name="enable_cpp_shield" value="1" {{ enable_cpp_shield ? 'checked' }}/>
		<label for="form_cpp_sh">C++ Shield</label><br>
		<span class="form_comment">Enable <a href="https://github.com/mjnaderi/Sharif-Judge/blob/docs/v1.4/shield.md" target="_blank">Shield</a> for C++</span>
	</p>
	<p class="input_p">
		<input id="form_py2_sh" type="checkbox" name="enable_py2_shield" value="1" {{ enable_py2_shield ? 'checked' }}/>
		<label for="form_py2_sh">Python 2 Shield</label><br>
		<span class="form_comment">Enable <a href="https://github.com/mjnaderi/Sharif-Judge/blob/docs/v1.4/shield.md" target="_blank">Shield</a> for Python 2</span>
	</p>
	<p class="input_p">
		<input id="form_py3_sh" type="checkbox" name="enable_py3_shield" value="1" {{ enable_py3_shield ? 'checked' }}/>
		<label for="form_py3_sh">Python 3 Shield</label><br>
		<span class="form_comment">Enable <a href="https://github.com/mjnaderi/Sharif-Judge/blob/docs/v1.4/shield.md" target="_blank">Shield</a> for Python 3</span>
	</p>
	<p class="input_p">
		<label for="form_def_c">Shield Rules (for C)</label>
		<textarea id="form_def_c" name="def_c" rows="15" class="mysui_input add_text clear">{{ defc }}</textarea>
	</p>
	<p class="input_p">
		<label for="form_def_cpp">Shield Rules (for C++)</label>
		<textarea id="form_def_cpp" name="def_cpp" rows="15" class="mysui_input add_text clear">{{ defcpp }}</textarea>
	</p>
	<p class="input_p">
		<label for="form_shield_py2">Shield (for Python 2)</label>
		<textarea id="form_shield_py2" name="shield_py2" rows="15" class="mysui_input add_text clear">{{ shield_py2 }}</textarea>
	</p>
	<p class="input_p">
		<label for="form_shield_py3">Shield (for Python 3)</label>
		<textarea id="form_shield_py3" name="shield_py3" rows="15" class="mysui_input add_text clear">{{ shield_py3 }}</textarea>
	</p>
	<p class="input_p">
		<br>
		<input type="submit" value="Save Changes" class="mysui_input"/>
	</p>
</form>
{% endblock %}  {# main_content #}
